<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //Consumo Total

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo Total:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtConsumoTotal"
            android:layout_width="347dp"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

    </LinearLayout>
//Couvert artistico

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Couvert Artístico:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtCouvert"
            android:layout_width="325dp"
            android:layout_height="63dp"
            android:ems="10"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

    </LinearLayout>
//Dividir

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dividir conta por:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtDividir"
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Quantas pessoas?"
            android:inputType="numberDecimal"
            android:textSize="24sp" />


    </LinearLayout>



   //Botao calcular

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="Calcular conta final" />
//taxa de serviço

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taxa de Serviço (10%):"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtTaxaServiço"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conta Total R$:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtTotal"
            android:layout_width="353dp"
            android:layout_height="67dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textSize="24sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor por pessoa:"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/txtValorPessoa"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/balaio" />



</LinearLayout>